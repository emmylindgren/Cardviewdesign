<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    app:cardCornerRadius="4dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginTop="8dp"
    android:backgroundTint="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View android:id="@+id/dayColor"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:background="@color/colorYellowDay"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/day_text"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/dayColor"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="MÃ…N 28/6"
                android:textSize="19sp"
                android:fontFamily="@font/roboto_light"
                android:textAlignment="center"
                android:layout_marginStart="8dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintStart_toEndOf="@id/day_text"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:id="@+id/firstColumn"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintStart_toEndOf="@id/day_text"
                    app:layout_constraintTop_toTopOf="parent"
                    android:paddingLeft="12dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="4dp">

                        <ImageButton
                            android:id="@+id/appointment1Button"
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:background="@drawable/roundbutton"
                            android:backgroundTint="@color/white"
                            android:layout_gravity="center"
                            />
                        <TextView
                            android:id="@+id/appointment1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="13sp"
                            android:paddingLeft="8dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="4dp">

                        <ImageButton
                            android:id="@+id/appointment2Button"
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:background="@drawable/roundbutton"
                            android:backgroundTint="@color/white"
                            android:layout_gravity="center"
                            />
                        <TextView
                            android:id="@+id/appointment2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="13sp"
                            android:paddingLeft="8dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="6dp"
                        android:paddingBottom="4dp">

                        <ImageButton
                            android:id="@+id/appointment3Button"
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:layout_gravity="center"
                            android:background="@drawable/roundbutton"
                            android:backgroundTint="@color/white" />
                        <TextView
                            android:id="@+id/appointment3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="13sp"
                            android:paddingLeft="8dp"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintStart_toEndOf="@id/firstColumn"
                    app:layout_constraintTop_toTopOf="parent"
                    android:paddingLeft="12dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="4dp">

                        <ImageButton
                            android:id="@+id/appointment4Button"
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:background="@drawable/roundbutton"
                            android:backgroundTint="@color/white"
                            android:layout_gravity="center" />
                        <TextView
                            android:id="@+id/appointment4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="13sp"
                            android:paddingLeft="8dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="4dp">

                        <ImageButton
                            android:id="@+id/appointment5Button"
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:background="@drawable/roundbutton"
                            android:backgroundTint="@color/white"
                            android:layout_gravity="center"
                            />
                        <TextView
                            android:id="@+id/appointment5"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"

                            android:fontFamily="@font/roboto_regular"
                            android:textSize="13sp"
                            android:paddingLeft="8dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp">

                        <ImageButton
                            android:id="@+id/appointment6Button"
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:layout_gravity="center"
                            android:background="@drawable/roundbutton"
                            android:backgroundTint="@color/white" />
                        <TextView
                            android:id="@+id/appointment6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="13sp"
                            android:paddingLeft="8dp"/>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>